{
  "name": "vscode-ollama",
  "displayName": "VSCode Ollama",
  "description": "Ollama integration for VSCode",
  "version": "1.0.0",
  "publisher": "warm3snow",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-ollama"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ollama.settings",
        "title": "Ollama: Settings",
        "category": "Ollama"
      },
      {
        "command": "vscode-ollama.openChat",
        "title": "Ollama: Open Chat",
        "category": "Ollama"
      },
      {
        "command": "vscode-ollama.testConnection",
        "title": "Ollama: Test Connection",
        "category": "Ollama"
      }
    ],
    "configuration": {
      "title": "Ollama",
      "properties": {
        "vscode-ollama.baseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:11434",
          "description": "Ollama server URL"
        },
        "vscode-ollama.model": {
          "type": "string",
          "default": "deepseek-r1:32b",
          "description": "Default Ollama model"
        },
        "vscode-ollama.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum tokens for context and response"
        },
        "vscode-ollama.keepAlive": {
          "type": "string",
          "enum": ["1 minute", "5 minutes", "10 minutes", "30 minutes"],
          "default": "5 minutes",
          "description": "Model keep-alive duration"
        },
        "vscode-ollama.performanceMode": {
          "type": "string",
          "enum": ["Base (Default)", "Fast", "Ultra"],
          "default": "Base (Default)",
          "description": "Performance mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.x.x",
    "@types/node-fetch": "^2.6.1",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "whatwg-url": "^11.0.0",
    "web-streams-polyfill": "^3.2.1"
  }
}
